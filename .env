# Gmail MCP Server Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# GMAIL API CREDENTIALS
# =============================================================================

# Your Gmail API access token
# Get this from: https://developers.google.com/oauthplayground/
GMAIL_ACCESS_TOKEN=your_gmail_access_token_here

# Optional: OAuth credentials for token refresh
# GMAIL_CLIENT_ID=your_client_id.apps.googleusercontent.com
# GMAIL_CLIENT_SECRET=your_client_secret
# GMAIL_REFRESH_TOKEN=your_refresh_token

# =============================================================================
# OPENWEBUI CONFIGURATION
# =============================================================================

# OpenWebUI admin credentials (first user will be admin)
OPENWEBUI_ADMIN_EMAIL=admin@example.com
OPENWEBUI_ADMIN_PASSWORD=changeme

# Enable/disable user signup
ENABLE_SIGNUP=true

# Default LLM model to use
DEFAULT_MODELS=llama3.2:latest

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama API endpoint (default for Docker setup)
OLLAMA_BASE_URL=http://ollama:11434

# Keep models loaded in memory for faster response
OLLAMA_KEEP_ALIVE=24h

# =============================================================================
# OPTIONAL: EXTERNAL LLM APIS
# =============================================================================

# OpenAI-compatible API (e.g., LM Studio, LocalAI)
# OPENAI_API_BASE_URL=http://localhost:8000/v1
# OPENAI_API_KEY=your_api_key_here

# Anthropic API (if you want to use Claude alongside local models)
# ANTHROPIC_API_KEY=your_anthropic_key_here

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Port for OpenWebUI (default: 3000, maps to container port 8080)
OPENWEBUI_PORT=3000

# Port for Ollama (default: 11434)
OLLAMA_PORT=11434

# =============================================================================
# ADVANCED OPTIONS
# =============================================================================

# Enable MCP (Model Context Protocol) support
ENABLE_MCP=true

# MCP Servers to load (comma-separated)
MCP_SERVERS=gmail

# Python log level for debugging
# PYTHON_LOG_LEVEL=DEBUG

# Character limit for MCP responses
# CHARACTER_LIMIT=25000
